{
    "manifest_version": 3,
    "name": "Sports Dashboard",
    "version": "1.0",
    "description": "Get the latest sports updates for Arsenal, Formula 1, OKC Thunder, and NY Giants.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "https://api-nba-v1.p.rapidapi.com/*",
        "https://api-nfl-v1.p.rapidapi.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://v3.football.api-sports.io/*",
        "https://v1.formula-1.api-sports.io/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}